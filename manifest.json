{
  "manifest_version": 2,
  "name": "Extend",
  "description": "Chrome extension that bridges Ethereum blockhain with popular social websites",
  "version": "1.0",
  "background": {
    "scripts": ["web3.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Extend",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "css": [],
      "js": ["jquery-slim.js", "page.js"]
    }
  ],
  "permissions": [
    "storage",
    "identity",
    "*://*.google.com/*",
    "https://wwww.reddit.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}